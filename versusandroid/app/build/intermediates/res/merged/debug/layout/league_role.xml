<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/mapContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/mapDecription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/JornadaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Jornada: Domingo 18 Ene"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Team1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Albinegros"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/abc_text_size_large_material" />

                <TextView
                    android:id="@+id/vsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="VS"
                    android:textColor="@color/accentColor"
                    android:textSize="@dimen/abc_text_size_large_material" />

                <TextView
                    android:id="@+id/Team2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFEPA"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/abc_text_size_large_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 hrs"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/LocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. Ojocaliente #123 Fracc. Ojocaliente II "
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/FieldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(CECATI, Cancha #5)"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/abc_text_size_small_material" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/EnCalientes/Documents/versusandroid/app/src/main/res/layout/league_role.xml -->